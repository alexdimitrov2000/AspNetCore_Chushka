@model EventCollectionViewModel
@{ 
    var pageNumber = (int)this.ViewData["Page"];
    var previousPageNumber = pageNumber - 1;
    var nextPageNumber = pageNumber + 1;

    var hasNextPage = (bool)this.ViewData["HasNextPage"];
}

<main class="mt-3">
    <h1 class="text-center">All Events</h1>
    <hr class="form-line" />
    <table class="table mx-auto table-hover">
        <thead>
            <tr class="row" style="margin-left: 0px; margin-right: 0px;">
                <th class="col-md-1"><strong>#</strong></th>
                <th class="col-md-3"><strong>Name</strong></th>
                <th class="col-md-2"><strong>Start</strong></th>
                <th class="col-md-2"><strong>End</strong></th>
                <th class="col-md-4"><strong>Actions</strong></th>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Events.Count(); i++)
            {
                <tr class="row m-0">
                    @{
                        var currentEvent = Model.Events[i];
                    }
                    @{ var rowNumber = i + 1 + (pageNumber - 1) * 10; }
                    <td class="col-md-1"><strong>@rowNumber</strong></td>
                    <td class="col-md-3">@currentEvent.Name</td>
                    <td class="col-md-2">@currentEvent.Start</td>
                    <td class="col-md-2">@currentEvent.End</td>
                    <td class="col-md-4">
                        <form class="table-form" asp-controller="Events" asp-action="Order" asp-route-id="@currentEvent.Id" method="post" style="display:flex">
                            <label for="tickets" class="text-bold mr-10">Tickets</label>
                            <input class="form-control w-50" type="number" id="tickets" name="tickets" />
                            <button type="submit" class="btn eventures-bg-color">Order</button>
                        </form>
                        @if (this.TempData["Error"] != null && this.TempData["EventId"].ToString() == currentEvent.Id)
                        {
                            <h5 class="form-error text-bold">@this.TempData["Error"]</h5>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr class="form-line" />
    <div class="d-flex justify-content-between">
        @if (previousPageNumber < 1)
        {
            <button class="btn eventures-bg-color" asp-controller="Events" asp-action="All" asp-route-page="@previousPageNumber" disabled>Previous Page</button>
        }
        else
        {
            <a class="btn eventures-bg-color" asp-controller="Events" asp-action="All" asp-route-page="@previousPageNumber">Previous Page</a>
        }
        @if (!hasNextPage)
        {
            <button class="btn eventures-bg-color" asp-controller="Events" asp-action="All" asp-route-page="@nextPageNumber" disabled>Next Page</button>
        }
        else
        {
            <a class="btn eventures-bg-color" asp-controller="Events" asp-action="All" asp-route-page="@nextPageNumber">Next Page</a>
        }
    </div>
</main>