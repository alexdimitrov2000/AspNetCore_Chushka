@model EventCreateViewModel
@{
    ViewData["Title"] = "Create Event";
}

<main class="mt-3">
    <h1 class="text-center">Create Event</h1>
    <form class="mx-auto col-md-5 text-center" method="post" asp-controller="Events" asp-action="Create">
        <hr class="form-line" />
        <div class="text-bold">
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Place"></label>
                    <input asp-for="Place" class="form-control" placeholder="Place..." />
                    <span asp-validation-for="Place" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Start"></label>
                    <input asp-for="Start" class="form-control" placeholder="Start..." />
                    <span asp-validation-for="Start" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="End"></label>
                    <input asp-for="End" class="form-control" placeholder="End..." />
                    <span asp-validation-for="End" class="text-danger"></span>
                </div>
            </div>
            <hr class="form-line" />
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="TotalTickets"></label>
                    <input asp-for="TotalTickets" class="form-control" placeholder="Total Tickets..." />
                    <span asp-validation-for="TotalTickets" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="TicketPrice"></label>
                    <input asp-for="TicketPrice" type="number" step="0.01" min="0.00" class="form-control" placeholder="Price per Ticket..." />
                    <span asp-validation-for="TicketPrice" class="text-danger"></span>
                </div>
            </div>
            <hr class="form-line" />
            <div class="button-holder d-flex justify-content-center">
                <button type="submit" class="btn eventures-bg-color">Create Event</button>
            </div>
        </div>
    </form>
</main>