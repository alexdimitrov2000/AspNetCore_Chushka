@model OrderCollectionViewModel

<main class="mt-3">
    <h1 class="text-center">All Orders</h1>
    <hr class="bg-secondary half-width" />
    <table class="table w-75 mx-auto table-hover">
        <thead>
            <tr class="row">
                <th class="col-md-1"><strong>#</strong></th>
                <th class="col-md-1"><strong>Order ID</strong></th>
                <th class="col-md-5"><strong>Customer</strong></th>
                <th class="col-md-2"><strong>Product</strong></th>
                <th class="col-md-2"><strong>Ordered On</strong></th>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Orders.Count(); i++)
            {
                <tr class="row">
                    @{ var order = Model.Orders[i]; }
                    @{ var rowNumber = i + 1; }
                    <td class="col-md-1"><strong>@rowNumber</strong></td>
                    <td class="col-md-1">@order.Id</td>
                    <td class="col-md-5">@order.CustomerName</td>
                    <td class="col-md-2">@order.ProductName</td>
                    <td class="col-md-2">@order.OrderedOn</td>
                </tr>
            }
        </tbody>
    </table>
</main>